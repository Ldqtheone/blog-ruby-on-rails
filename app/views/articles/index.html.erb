<h1>Articles</h1>

<div class="row">

  <div class="d-flex justify-content-start">

    <% @articles.each do |article| %>

      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= article.title %></h5>
          <p class="card-text"><%= article.body %></p>
          <a href="#" class="card-link"><%= link_to "Voir l'article", article %></a>
        </div>
      </div>

    <% end %>

  </div>

  <%= link_to "Ecrire un nouvel article", new_article_path %>

</div>

